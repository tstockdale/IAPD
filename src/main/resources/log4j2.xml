<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36} - %msg%n"/>
        </Console>
        
        <!-- Rolling File Appender for Processing Logs with 5MB rollover -->
        <RollingFile name="ProcessingFile" fileName="${sys:user.dir}/${sys:log.path}/processing.log"
                     filePattern="${sys:user.dir}/${sys:log.path}/processing-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="5MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
        
        <!-- Rolling File Appender for Provider Match Logs with 50MB rollover -->
        <RollingFile name="ProviderMatchFile" fileName="${sys:user.dir}/${sys:log.path}/provider_match_strings.log"
                     filePattern="${sys:user.dir}/${sys:log.path}/provider_match_strings-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="50MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    
    <Loggers>
        <!-- Root logger configuration -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ProcessingFile"/>
        </Root>
        
        <!-- Specific logger for ProcessingLogger (console + processing file) -->
        <Logger name="ProcessingLogger" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="ProcessingFile"/>
        </Logger>
        
        <!-- Specific logger for ProviderMatchLogger (file-only, no console output) -->
        <Logger name="ProviderMatchLogger" level="INFO" additivity="false">
            <AppenderRef ref="ProviderMatchFile"/>
        </Logger>
    </Loggers>
</Configuration>
