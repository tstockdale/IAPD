{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Maven: Clean and Compile",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "compile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Maven: Resolve Dependencies",
            "type": "shell",
            "command": "mvn",
            "args": ["dependency:resolve"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Java: Clean Workspace and Reload Projects",
            "type": "shell",
            "command": "echo",
            "args": ["Cleaning workspace and reloading projects..."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "dependsOn": ["Maven: Clean and Compile"]
        },
        {
            "label": "Fix Jackson Import Issues",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "dependency:resolve", "compile"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
